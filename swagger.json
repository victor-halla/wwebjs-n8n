{
  "openapi": "3.0.0",
  "info": { "title": "WWebJS API", "description": "API wrapper for WhatsAppWebJS", "version": "1.0.0" },
  "tags": [
    {"name": "Session"}, {"name": "Client"}, {"name": "Message"}, {"name": "Various"}
  ],
  "paths": {
    "/ping": {"get": {"tags": ["Various"], "summary": "Health check", "description": "Responds with pong", "operationId": "ping"}},
    "/session/getSessions": {"get": {"tags": ["Session"], "summary": "Get all sessions", "description": "Get all sessions.", "operationId": "getSessions"}},
    "/session/start/{sessionId}": {"get": {"tags": ["Session"], "summary": "Start session", "description": "Starts a session for the given session ID.", "operationId": "startSession", "parameters": [{"name": "sessionId","in": "path","required": true,"schema": {"type": "string"},"description": "Unique identifier for the session"}]}},
    "/session/stop/{sessionId}": {"get": {"tags": ["Session"], "summary": "Stop session", "description": "Stops a session.", "operationId": "stopSession", "parameters": [{"name": "sessionId","in": "path","required": true,"schema": {"type": "string"}}]}},
    "/session/status/{sessionId}": {"get": {"tags": ["Session"], "summary": "Get session status", "description": "Status of the session.", "operationId": "getSessionStatus", "parameters": [{"name": "sessionId","in": "path","required": true,"schema": {"type": "string"}}]}},
    "/session/qr/{sessionId}": {"get": {"tags": ["Session"], "summary": "Get session QR code", "description": "QR code data of the session.", "operationId": "getSessionQR", "parameters": [{"name": "sessionId","in": "path","required": true,"schema": {"type": "string"}}]}},
    "/session/qr/{sessionId}/image": {"get": {"tags": ["Session"], "summary": "Get QR code as image", "description": "QR code as PNG image.", "operationId": "getSessionQRImage", "parameters": [{"name": "sessionId","in": "path","required": true,"schema": {"type": "string"}}]}},
    "/session/restart/{sessionId}": {"get": {"tags": ["Session"], "summary": "Restart session", "description": "Restarts the session.", "operationId": "restartSession", "parameters": [{"name": "sessionId","in": "path","required": true,"schema": {"type": "string"}}]}},
    "/session/terminate/{sessionId}": {"get": {"tags": ["Session"], "summary": "Terminate session", "description": "Terminates the session.", "operationId": "terminateSession", "parameters": [{"name": "sessionId","in": "path","required": true,"schema": {"type": "string"}}]}},
    "/session/terminateInactive": {"get": {"tags": ["Session"], "summary": "Terminate inactive sessions", "description": "Terminates all inactive sessions.", "operationId": "terminateInactiveSessions"}},
    "/session/terminateAll": {"get": {"tags": ["Session"], "summary": "Terminate all sessions", "description": "Terminates all sessions.", "operationId": "terminateAllSessions"}},
    "/session/getPageScreenshot/{sessionId}": {"get": {"tags": ["Session"], "summary": "Get page screenshot", "description": "Screenshot of the client.", "operationId": "getPageScreenshot", "parameters": [{"name": "sessionId","in": "path","required": true,"schema": {"type": "string"}}]}},
    "/session/requestPairingCode/{sessionId}": {"post": {"tags": ["Session"], "summary": "Request pairing code", "description": "Request authentication via pairing code.", "operationId": "requestPairingCode", "parameters": [{"name": "sessionId","in": "path","required": true,"schema": {"type": "string"}}], "requestBody": {"required": true, "content": {"application/json": {"schema": {"type": "object", "properties": {"phoneNumber": {"type": "string", "description": "Phone number in international format", "example": "5511999999999"}, "showNotification": {"type": "boolean", "description": "Show notification on phone", "example": true}}}}}}}},
    "/client/getClassInfo/{sessionId}": {"get": {"tags": ["Client"], "summary": "Get connection info", "description": "Get current connection information.", "operationId": "getClassInfo", "parameters": [{"name": "sessionId","in": "path","required": true,"schema": {"type": "string"}}]}},
    "/client/acceptInvite/{sessionId}": {"post": {"tags": ["Client"], "summary": "Accept group invite", "description": "Accept an invitation to join a group.", "operationId": "acceptInvite", "parameters": [{"name": "sessionId","in": "path","required": true,"schema": {"type": "string"}}], "requestBody": {"required": true, "content": {"application/json": {"schema": {"type": "object", "properties": {"inviteCode": {"type": "string", "description": "Invitation code", "example": "ABC123"}}}}}}}}  ,
    "/client/archiveChat/{sessionId}": {"post": {"tags": ["Client"], "summary": "Archive chat", "description": "Archive the chat.", "operationId": "archiveChat", "parameters": [{"name": "sessionId","in": "path","required": true,"schema": {"type": "string"}}], "requestBody": {"required": true, "content": {"application/json": {"schema": {"type": "object", "properties": {"chatId": {"type": "string", "description": "ID of the chat", "example": "5511999999999@c.us"}}}}}}}},
    "/client/createGroup/{sessionId}": {"post": {"tags": ["Client"], "summary": "Create group", "description": "Create a new group.", "operationId": "createGroup", "parameters": [{"name": "sessionId","in": "path","required": true,"schema": {"type": "string"}}], "requestBody": {"required": true, "content": {"application/json": {"schema": {"type": "object", "required": ["title","participants"], "properties": {"title": {"type": "string", "description": "Group title", "example": "My Group"}, "participants": {"type": "array", "description": "Array of participant IDs", "example": ["5511999999999@c.us"]}}}}}}}}  ,
    "/client/getChats/{sessionId}": {"get": {"tags": ["Client"], "summary": "Get all chats", "description": "Get all chats.", "operationId": "getChats", "parameters": [{"name": "sessionId","in": "path","required": true,"schema": {"type": "string"}}]}},
    "/client/getContacts/{sessionId}": {"get": {"tags": ["Client"], "summary": "Get all contacts", "description": "Get all contacts.", "operationId": "getContacts", "parameters": [{"name": "sessionId","in": "path","required": true,"schema": {"type": "string"}}]}},
    "/client/getNumberId/{sessionId}": {"post": {"tags": ["Client"], "summary": "Get number ID", "description": "Get the WID of a phone number.", "operationId": "getNumberId", "parameters": [{"name": "sessionId","in": "path","required": true,"schema": {"type": "string"}}], "requestBody": {"required": true, "content": {"application/json": {"schema": {"type": "object", "properties": {"number": {"type": "string", "description": "Phone number", "example": "5511999999999"}}}}}}}},
    "/client/sendMessage/{sessionId}": {"post": {"tags": ["Client"], "summary": "Send message", "description": "Send a text message.", "operationId": "sendMessage", "parameters": [{"name": "sessionId","in": "path","required": true,"schema": {"type": "string"}}], "requestBody": {"required": true, "content": {"application/json": {"schema": {"type": "object", "required": ["chatId","message"], "properties": {"chatId": {"type": "string", "description": "Chat ID (phone@c.us or groupId@g.us)", "example": "5511999999999@c.us"}, "message": {"type": "string", "description": "Text message content", "example": "Hello World"}, "options": {"type": "object", "description": "Additional options"}}}}}}}},
    "/client/sendMediaUrl/{sessionId}": {"post": {"tags": ["Client"], "summary": "Send media from URL", "description": "Send media file from a URL.", "operationId": "sendMediaUrl", "parameters": [{"name": "sessionId","in": "path","required": true,"schema": {"type": "string"}}], "requestBody": {"required": true, "content": {"application/json": {"schema": {"type": "object", "required": ["chatId","url"], "properties": {"chatId": {"type": "string", "description": "Chat ID", "example": "5511999999999@c.us"}, "url": {"type": "string", "description": "URL of the media", "example": "https://example.com/image.jpg"}, "caption": {"type": "string", "description": "Caption for the media", "example": "Check this out!"}, "filename": {"type": "string", "description": "Filename for the media"}}}}}}}}  ,
    "/client/setStatus/{sessionId}": {"post": {"tags": ["Client"], "summary": "Set status message", "description": "Set the client status message.", "operationId": "setStatus", "parameters": [{"name": "sessionId","in": "path","required": true,"schema": {"type": "string"}}], "requestBody": {"required": true, "content": {"application/json": {"schema": {"type": "object", "properties": {"status": {"type": "string", "description": "Status message", "example": "Available"}}}}}}}}  ,
    "/client/isRegisteredUser/{sessionId}": {"post": {"tags": ["Client"], "summary": "Check if user is registered", "description": "Check if phone number is registered on WhatsApp.", "operationId": "isRegisteredUser", "parameters": [{"name": "sessionId","in": "path","required": true,"schema": {"type": "string"}}], "requestBody": {"required": true, "content": {"application/json": {"schema": {"type": "object", "properties": {"number": {"type": "string", "description": "Phone number to check", "example": "5511999999999"}}}}}}}},
    "/client/getChatById/{sessionId}": {"post": {"tags": ["Client"], "summary": "Get chat by ID", "description": "Get chat details by chat ID.", "operationId": "getChatById", "parameters": [{"name": "sessionId","in": "path","required": true,"schema": {"type": "string"}}], "requestBody": {"required": true, "content": {"application/json": {"schema": {"type": "object", "properties": {"chatId": {"type": "string", "description": "Chat ID", "example": "5511999999999@c.us"}}}}}}}},
    "/client/getContactById/{sessionId}": {"post": {"tags": ["Client"], "summary": "Get contact by ID", "description": "Get contact details by contact ID.", "operationId": "getContactById", "parameters": [{"name": "sessionId","in": "path","required": true,"schema": {"type": "string"}}], "requestBody": {"required": true, "content": {"application/json": {"schema": {"type": "object", "properties": {"contactId": {"type": "string", "description": "Contact ID", "example": "5511999999999@c.us"}}}}}}}}  ,
    "/message/getMessages/{sessionId}": {"post": {"tags": ["Message"], "summary": "Get messages from chat", "description": "Get messages from a specific chat.", "operationId": "getMessages", "parameters": [{"name": "sessionId","in": "path","required": true,"schema": {"type": "string"}}], "requestBody": {"required": true, "content": {"application/json": {"schema": {"type": "object", "required": ["chatId"], "properties": {"chatId": {"type": "string", "description": "Chat ID", "example": "5511999999999@c.us"}, "searchOptions": {"type": "object", "description": "Search options (limit, fromMe, etc)"}}}}}}}},
    "/message/deleteMessage/{sessionId}": {"post": {"tags": ["Message"], "summary": "Delete message", "description": "Delete a message.", "operationId": "deleteMessage", "parameters": [{"name": "sessionId","in": "path","required": true,"schema": {"type": "string"}}], "requestBody": {"required": true, "content": {"application/json": {"schema": {"type": "object", "required": ["chatId","messageId"], "properties": {"chatId": {"type": "string", "description": "Chat ID", "example": "5511999999999@c.us"}, "messageId": {"type": "string", "description": "Message ID to delete", "example": "ABCDEF123"}, "everyone": {"type": "boolean", "description": "Delete for everyone", "example": true}}}}}}}}  ,
    "/message/reactToMessage/{sessionId}": {"post": {"tags": ["Message"], "summary": "React to message", "description": "React to a message with an emoji.", "operationId": "reactToMessage", "parameters": [{"name": "sessionId","in": "path","required": true,"schema": {"type": "string"}}], "requestBody": {"required": true, "content": {"application/json": {"schema": {"type": "object", "required": ["chatId","messageId","reaction"], "properties": {"chatId": {"type": "string", "description": "Chat ID", "example": "5511999999999@c.us"}, "messageId": {"type": "string", "description": "Message ID", "example": "ABCDEF123"}, "reaction": {"type": "string", "description": "Emoji reaction", "example": "üëç"}}}}}}}},
    "/message/starMessage/{sessionId}": {"post": {"tags": ["Message"], "summary": "Star message", "description": "Star or unstar a message.", "operationId": "starMessage", "parameters": [{"name": "sessionId","in": "path","required": true,"schema": {"type": "string"}}], "requestBody": {"required": true, "content": {"application/json": {"schema": {"type": "object", "required": ["chatId","messageId"], "properties": {"chatId": {"type": "string", "description": "Chat ID", "example": "5511999999999@c.us"}, "messageId": {"type": "string", "description": "Message ID", "example": "ABCDEF123"}, "star": {"type": "boolean", "description": "True to star, false to unstar", "example": true}}}}}}}}
  }
}
